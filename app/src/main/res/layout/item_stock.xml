<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="3dp"
    android:background="@drawable/rounder_pink"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_stock_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="2dp"
        tools:text="2330"
        android:textColor="@color/textTitle"
        />

    <TextView
        android:id="@+id/tv_stock_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:padding="2dp"
        tools:text="台積電"
        android:textColor="@color/cuteBlue"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/layoutInfomation"
        >
        <TextView
            android:text="開盤價"
            style="@style/textTitle" />
        <TextView
            android:id="@+id/tv_stock_open"
            style="@style/textContent"
            tools:text="100.9"
             />
        <TextView
            android:text="收盤價"
            style="@style/textTitle" />
        <TextView
            android:id="@+id/tv_stock_close"
            style="@style/textContent"
            tools:text="100.9"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/layoutInfomation"
        >
        <TextView
            android:text="最高價"
            style="@style/textTitle" />
        <TextView
            android:id="@+id/tv_stock_high"
            style="@style/textContent"
            tools:text="100.9"
            />
        <TextView
            android:text="最低價"
            style="@style/textTitle"
             />
        <TextView
            android:id="@+id/tv_stock_low"
            style="@style/textContent"
            tools:text="100.9"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/layoutInfomation"
        >
        <TextView
            android:text="漲跌價差"
            style="@style/textTitle" />
        <TextView
            android:id="@+id/tv_stock_change"
            style="@style/textContent"
            tools:text="100.9"
            />
        <TextView
            android:text="月平均價"
            style="@style/textTitle"/>
        <TextView
            android:id="@+id/tv_stock_avg"
            style="@style/textContent"
            tools:text="100.9"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        >
        <TextView
            android:text="成交比數"
            style="@style/textTitleSmall" />
        <TextView
            android:id="@+id/tv_transaction"
            style="@style/textContentSmall"
            tools:text="100.9"
            />
        <TextView
            android:text="成交股數"
            style="@style/textTitleSmall"/>
        <TextView
            android:id="@+id/tv_tradeVolume"
            style="@style/textContentSmall"
            tools:text="100.9"
            />
        <TextView
            android:text="成交金額"
            style="@style/textTitleSmall" />
        <TextView
            android:id="@+id/tv_tradeValue"
            style="@style/textContentSmall"
            tools:text="100.9"
            />


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>
